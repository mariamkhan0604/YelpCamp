<% layout('layouts/boilerplate') %>
   
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
         <form method="post" action="/campgrounds" novalidate class="validated-form" enctype="multipart/form-data">

        <div class ="mb-3">
        <label class="form-label" for="title"> Enter Title</label>
        <input class="form-control" type="text" name="campground[title]" placeholder="title" id="title" required>
        <div class="valid-feedback">
            Looks Good!
        </div>
        </div>

        <div class="mb-3">
        <label class="form-label" for="location"> Enter Location</label>
        <input class="form-control" type="text" name="campground[location]" placeholder="location" id="location" required>
        <div class="valid-feedback">
            Looks Good!
        </div>
        </div>

        <!-- <div class="mb-3">
        <label class="form-label" for="image"> Image Url</label>
        <input class="form-control" type="text" name="campground[image]" placeholder="image" id="image" required>
        <div class="valid-feedback">
            Looks Good!
        </div>
        </div> -->
<div class="mb-3">
  <label for="image" class="form-label">Upload Images</label>
  <input class="form-control" type="file" id="image" name="image" multiple>
  <div id="file-names" class="form-text mt-2 text-muted"></div>
</div>



        <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="campground[price]" required>
                </div>
        <div class="valid-feedback">
            Looks Good!
        </div>
            </div>

        <div class="mb-3">
        <label class="form-label" for="description"> Enter Description</label>
        <textarea class="form-control" type="text" name="campground[description]" placeholder="Description" id="description" required></textarea>
        <div class="valid-feedback">
            Looks Good!
        </div>
        </div>

        <div class="mb-3">
            <button class="btn btn-info">Submit</button>
        </div>

    </form>
    <a href="/campgrounds">All Campgrounds</a>
    </div>
</div>

