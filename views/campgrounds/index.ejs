<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<div class="container">
    <h1> All Campgrounds</h1>
    <a href="/campgrounds/new">Add a new campground</a>
    <ul>
        <% for(let c of campgrounds){ %>
<div class="card mb-3" >
    <div class="row">
        <div class="col-md-4">
            <% if(c.images.length){ %>
            <img crossorigin="anonymous" class="img-fluid" alt="" src="<%=c.images[0].url%>" style="width: 100%; height:100%;">
            <% }else{%>
                 <img crossorigin="anonymous" class="img-fluid" alt="" src="https://res.cloudinary.com/dlwjselga/image/upload/v1752578751/YelpCamp/vfp239rpm4kmbdcanjnk.png">
                <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= c.title %> </h5>
                <p class="card-text"><%= c.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= c.location%></small>
                </p>
                <a class="btn btn-primary" href="/campgrounds/<%=c._id%>">View <%=c.title%></a>
            </div>
        </div>
    </div>
</div>
        <% } %>
    </ul>
