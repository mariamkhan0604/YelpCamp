<% layout('layouts/boilerplate') %>

<div class="row ">
    <div class="col-12">
      <h1 class="text-center mb-4">Edit Campground</h1>
    </div>
    <div class="col-6 offset-3">
<form action="/campgrounds/<%=campgrounds._id%>?_method=PUT" method="POST" novalidate class="validated-form"\
     enctype="multipart/form-data" >
        <div class ="mb-3">
        <label class="form-label" for="title"> Enter Title</label>
        <input class="form-control" type="text" name="campground[title]" placeholder="title" id="title" value="<%= campgrounds.title %>" required>
         <div class="valid-feedback">
            Looks Good!
        </div>
    </div><div class="mb-3">
        <label class="form-label" for="location"> Enter Location</label>
        <input class="form-control" type="text" name="campground[location]" placeholder="location" id="location" value="<%= campgrounds.location %>" required>
         <div class="valid-feedback">
            Looks Good!
        </div>
    </div>
        <div class="mb-3">
  <label for="image" class="form-label">Add More Images</label>
  <input class="form-control" type="file" id="image" name="image" multiple>
  <div id="file-names" class="form-text mt-2 text-muted"></div>
</div>

        <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="campground[price]" value="<%= campgrounds.price %>" required>
                         <div class="valid-feedback">
                            Looks Good!
                        </div>
                </div>
            </div>
        <div class="mb-3">
        <label class="form-label" for="description"> Enter Description</label>
        <textarea class="form-control" name="campground[description]" id="description" required><%= campgrounds.description %></textarea>
            <div class="valid-feedback">
                        Looks Good!
                    </div>
        </div>
              <div class="mb-3">
                <% campgrounds.images.forEach(function(img, i) {  %>

                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">Delete?</label><br>
                <% })%>
            </div>
        <div class="mb-3">
            <button class="btn btn-info">Update</button>
        </div>
    </form>
   
    <div class="text-center ">
        <a href="/campgrounds/<%= campgrounds._id %>">Back to Campgrounds</a>
      </div>
    </div>
</div>
